<table class="table table-bordered">
  {% if data.withHeadings %}
    <thead>
      <tr>
        {% assign headings = data.content | first %}
        {% for heading in headings %}
          <th scope="col">{{ heading }}</th>
        {% endfor %}
      </tr>
    </thead>
  {% endif %}
  <tbody>
    {% if data.withHeadings %}
      {% assign table = data.content | shift %}
      {% render './table-row', table: table %}
    {% else %}
      {% render './table-row', table: data.content %}
    {% endif %}
  </tbody>
</table>
